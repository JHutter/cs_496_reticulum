{{#if user}}
    <div class="jumbotron">
      <h1>Edit Profile</h1>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Current Profile</h3>
        <br>
        <br>
        <p>Last Name: {{name.lname}}</p>
        <p>First Name: {{name.fname}}</p>
        {{#if hasSig}}
        <div> <img src="{{name.signature}}" height="60" width="168" class="img-fluid" alt="Responsive image"> </div>
        {{else}}
        <div> <img src="{{noSig}}" height="60" width="168" class="img-fluid" alt="Responsive image"> </div>
        {{/if}}
      </div>
      <div class="panel-body">
        <form action="/editProfile" method="post">
           <fieldset>
             <label for="newLName">New Last Name</label>
             <input type="text" name="newLName" id="newLName" value={{name.lname}}>

             </br>
             </br>

             <label for="newFName">New First Name</label>
             <input type="text" name="newFName" id="newFName" value={{name.fname}}>

             </br>
             </br>

             <label for="newSig">Signature Image URL</label>
             <input type="text" name="newSig" id="newSig" value={{name.signature}}>

           </br>
           </br>
             <input type="submit" id="editSubmit">
           </fieldset>
         </form>
      </div>
    </div>

{{else}}
  <div class="jumbotron text-center">
    <h1>Reticulum</h1>
    <p>Sign in</p><br>
    <p> Or </p><br>
    <p>Sign up and get started!</p>
    <p>
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span>
       Sign in / Sign up
      </a>
    </p>
  </div>

{{/if}}
