{{#if user}}
  <div class="jumbotron text-center">
    <h1>LifeBridge</h1>
    <p>Below are your matches</p>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Messages</h3>
    </div>
    <div class="panel-body">
    <table class="table table-striped table-hover">
      <thead>

        <tr>

            <th>Sender</th>

            <th>Action</th>

        </tr>
      </thead>

      <tbody>

        {{#each rows}}

            <tr>

                <td>{{this.userName}}</td>
                <td>
                <a href="/acceptMatch?sentid={{this.userID}}"><button id="acceptbtn" button type="button" class="btn btn-primary">Accept</button></a>
                <a href="/declineMatch?sentid={{this.userID}}"><button id="declinebtn" button type="button" class="btn btn-primary">Decline</button></a>
                </td>

            </tr>

        {{/each}}

      </tbody>

      </table>

    </div>
  </div>

{{else}}
  <div class="jumbotron text-center">
    <h1>LifeBridge</h1>
    <p>Sign in to view your matches</p><br>
    <p> Or </p><br>
    <p>Sign up and get started!</p>
    <p>
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span>
        Sign in / Sign up
      </a>
    </p>
  </div>

{{/if}}